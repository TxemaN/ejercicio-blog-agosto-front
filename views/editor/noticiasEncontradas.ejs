<%- include('../templates/header.ejs') %>
    <%- include('../templates/navLogeado.ejs') %>


        <main>


            <h1>
                <%= titulo %>
            </h1>


            <div class="flexContainer">
                <% noticias.forEach(element=> { %>
                    <article>
                        <h3><a href="/editor/buscadaAjena/<%= element.titulo %>/<%= idUsuario %>/<%= nombreUsuario %>" class="btnTabla"> <%= element.titulo %></a></h3>
                        <p class="textCenter">CREADA POR: <a href="/editor/creadapor/<%= element.creador %>/<%= element.nombrecreador %>/<%= idUsuario %>/<%= nombreUsuario %>" class="btnTabla"><%= element.nombrecreador %></a> el <%= element.fecha %> </p>
                       <div class="parrafoCorto">
                        <p >
                            <%= element.noticia %>
                        </p>
                        <div >
                            <figure>

                                <img src="<%= element.imagensrc%>" alt="<%= element.imagenalt%>">
                            </figure>
                        </div>
                    </div>

                    </article>
                    <% }) %>
            </div>
        </main>
        <%- include('../templates/footer.ejs') %>