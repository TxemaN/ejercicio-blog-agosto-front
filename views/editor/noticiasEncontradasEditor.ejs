<%- include('../templates/header.ejs') %>
<%- include('../templates/navLogeado.ejs') %>


<main>
    <h1><%= titulo %></h1>
    
    
        <% noticias.forEach(element => { %>
            <article class="noticia">
                <h3><a href="/editor/buscada/<%= element.titulo %>/<%= idUsuario %>/<%= nombreUsuario %>" class="btnTabla"><%= element.titulo %></a></h3>
                <p class="textCenter"><%= element.fecha %></p>
                <div class="parrafoCorto">
                <p><%= element.intronoticia %></p>
                <p><%= element.imagen %></p>
                <div >
                    <figure>
                       
                        <img src="/<%= element.imagensrc%>" alt="<%= element.imagenalt%>">
                    </figure>
                </div>
                <a href="/editor/editar/<%= element.titulo %>/<%= idUsuario %>/<%= nombreUsuario %>" class="btnTabla">Editar</a>
                <a href="/editor/borrar/<%= element.titulo %>/<%= idUsuario %>/<%= nombreUsuario %>" class="btnTabla">Borrar</a>
            </div>
        </article>
        <% }) %>
    
</main>
<%- include('../templates/footer.ejs') %>