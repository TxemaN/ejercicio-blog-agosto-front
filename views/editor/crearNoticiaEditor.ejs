<%- include('../templates/header.ejs') %>
    <%- include('../templates/navLogeado.ejs') %>
        <main>
            <h1>Añade una noticia</h1>
           
                <form method="post"  action="/editor/creada/">

                    <div class="formulario">
                    <label hidden for="creador">ID creador: (ESTE CAMPO ES EXCLUSIVO NO SE PUEDE MODIFICAR)</label>
                    <input hidden type="text" class="invariable" name="creador" id="creadorId" value="<%= idUsuario  %>" readonly>
                    <label hidden for="nombreCreador">Nombre creador: (ESTE CAMPO ES EXCLUSIVO NO SE PUEDE MODIFICAR)</label>
                    <input hidden type="text" class="invariable" name="nombrecreador" id="creadorId" value="<%= nombreUsuario  %>" readonly>
                    <label for="titulo">Título:</label>
                    <input type="text" placeholder="título" name="titulo" id="tituloId">
                    <label for="noticia">Cuerpo noticia:</label>
                    <textarea name="noticia" id="noticiaId" rows="4" cols="50">Descripción </textarea>
                    <label for="imagensrc">URL Imagen:</label>
                    <textarea name="imagensrc"> </textarea>
                    <label for="imagenalt">DESCRIPCIÓN IMAGEN:</label>
                    <input type="text" name="imagenalt">
                    
                </div>

                    <button type="submit" class ="submit">Añadir noticia</button>

                </form>
            
        </main>
        <%- include('../templates/footer.ejs') %>