<%- include('../templates/header.ejs') %>
<%- include('../templates/navAdmin.ejs') %>


<main>
    <h1><%= titulo %></h1>
    
    <div class="flexContainer">
        <% noticias.forEach(element => { %>
            <div class="noticia">
               
                <h3 class="textCenter"><%= element.titulo %></h3>
               
                
                
                <p class="cajanoticia"><%= element.noticia %></p>
               
                <div>
                    <figure>
                       
                        <img src="/<%= element.imagensrc%>" alt="<%= element.imagenalt%>">
                    </figure>
                </div>
                <p class="textCenter"> <%= element.fecha %></p>
              
                <a href="/adminillo/editar/<%= element.titulo %>/<%= element.creador %>/<%= element.nombrecreador %>/<%= idUsuario %>/<%= nombreUsuario %>" >Editar</a>
                <a href="/adminillo/borrar/<%= element.titulo %>/<%= idUsuario %>/<%= nombreUsuario %>" >Borrar</a>
                
            </div>
        <% }) %>
    </div>
</main>
<%- include('../templates/footer.ejs') %>